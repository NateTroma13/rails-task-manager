<div class="task-wrapper text-center">
  <h1><%= @task.title %></h1>

  <div class="mb-3">
    <p><%= @task.details %></p>
    <p>
      Status:
      <span class="<%= @task.completed ? 'text-success' : 'text-danger' %> fw-bold">
        <%= @task.completed ? 'âœ… Completed' : 'âŒ Incomplete' %>
      </span>
    </p>
  </div>

  <div class="d-flex justify-content-center gap-2">
    <%= link_to "Back", tasks_path, class: "btn btn-secondary" %>
    <%= link_to "Edit", edit_task_path(@task), class: "btn btn-primary" %>
    <%= link_to "Delete", task_path(@task), method: :delete,
        data: { turbo_confirm: "Are you sure?" },
        class: "btn btn-danger" %>
  </div>
</div>
